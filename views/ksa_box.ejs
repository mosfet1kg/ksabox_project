<%- partial('header') %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">KSA-Box</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Public IP</th>
                <th>Private IP</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            <% for(var idx in vm_list){%>
                <% if( vm_list[idx].openstack.status == "ACTIVE" && vm_list[idx].openstack.image.name == 'R&E_VDI' ){%>
                <tr>
                    <td><%=vm_list[idx].openstack.name%></td>
                    <td><%=vm_list[idx].openstack.image.name%></td>
                    <td><%=vm_list[idx].addresses.public[0]%></td>
                    <td><%=vm_list[idx].addresses.private[0]%></td>
                    <td><%=vm_list[idx].openstack.status%></td>
                    <td>
                        <a href="/pages/ksa_vdi/<%=vm_list[idx].addresses.public[0]%>">
                            <button type="button" class="btn btn-primary">Console</button>
                        </a>
                        <a href="/pages/ksa_webdisk/<%=vm_list[idx].addresses.public[0]%>">
                            <button type="button" class="btn btn-success">Web Disk</button>
                        </a>
                    </td>
                </tr>
                <%}%>
            <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- partial('footer') %>